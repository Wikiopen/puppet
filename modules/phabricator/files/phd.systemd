[Unit]
Description=phabricator-phd
After=syslog.target network.target mysql.service
Before=apache2.service

[Service]
Type=forking
User=www-data
Group=www-data
ExecStartPre=-/bin/mkdir -p var/tmp/phd && -/bin/mkdir -p /var/run/phd/
ExecStartPre=/bin/chown -R www-data:www-data /var/tmp/phd && /bin/chown -R www-data:www-data /var/run/phd/
ExecStart=/srv/phab/phabricator/bin/phd start
ExecStop=/srv/phab/phabricator/bin/phd stop --force
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
